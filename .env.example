# Environment Configuration Example
# Copy this file to .env and fill in your values

# Application Settings
NODE_ENV=production
NPM_CONFIG_PRODUCTION=false
PORT=3000

# Database Configuration
DB_HOST=postgres  # Use 'postgres' for Docker Compose, 'localhost' for local development
DB_PORT=5432
DB_NAME=parkfan
DB_USER=postgres
DB_PASS=your_secure_password_here

# Park Operating Status Configuration
# Percentage threshold (0-100) to determine when a park is considered "open"
# Default: 50% of rides must be operating for a park to be considered open
PARK_OPEN_THRESHOLD_PERCENT=50

# TypeORM Configuration (optional)
# TYPEORM_SYNCHRONIZE=false
# TYPEORM_LOGGING=false
# ENABLE_QUERY_LOGGING=false

# Connection Pool Settings (optional)
# DB_POOL_MIN=2
# DB_POOL_MAX=10
# DB_POOL_IDLE_TIMEOUT=30000
# DB_POOL_ACQUIRE_TIMEOUT=60000

# Performance Settings (optional)
# QUEUE_TIMES_BATCH_SIZE=20
# QUEUE_TIMES_BATCH_DELAY=100
# WEATHER_MAX_CONCURRENT_REQUESTS=3

# Debug Settings (optional)
# ENABLE_DEBUG_LOGS=false
# LOG_LEVEL=info
